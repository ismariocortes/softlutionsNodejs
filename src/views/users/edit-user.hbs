<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar usuario</h3>
        </div>
        <div class="card-body">
            <form action="/users/edit/{{user._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="user_name" id="" class="form-control" value="{{user.name}}">
                </div>
                <div class="form-group">
                    <input type="tel" name="user_tel" id="" class="form-control" value="{{user.telephone}}">
                </div>
                <div class="form-group">
                    <input type="email" name="user_mail" id="" class="form-control" value="{{user.mail}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>