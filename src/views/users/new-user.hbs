<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>
                New user
            </h3>
        </div>
        <div class="card-body">
            <form action="/users/new-user" method="POST">
                <div class="form-group">
                    <input type="text" name="user_name" id="" class="form-control" placeholder="name" autofocus value="{{user_name}}">
                </div>
                <div class="form-group">
                    <input type="tel" name="user_tel" id="" class="form-control" placeholder="telephone" value="{{user_tel}}">
                </div>
                <div class="form-group">
                    <input type="email" name="user_mail" id="" class="form-control" placeholder="email" value="{{user_mail}}">
                </div>
                <div class="form-group">
                    <input type="password" name="user_pass" id="" class="form-control" placeholder="password" >
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Save</button>
                </div>
            </form>            
        </div>
    </div>
</div>